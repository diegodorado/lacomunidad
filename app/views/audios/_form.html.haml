= semantic_form_for @audio, :html=>{:class=>'form-horizontal'} do |f|
  = f.semantic_errors
  = f.inputs do
    %legend Audio
    = f.input :title, :input_html=>{:class=>'span6'}
    = f.input :description, :input_html=>{:class=>'span6', :rows=>6}
    = f.input :mp3, :input_html=>{:class=>'span6', :rows=>6}
    = f.input :ogg, :input_html=>{:class=>'span6', :rows=>6}
  = f.actions do
    = f.action :submit,:button_html => { :class => "btn btn-primary"}
