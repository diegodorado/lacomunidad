= semantic_form_for @candidate, :html=>{:class=>'form-horizontal'} do |f|
  = f.semantic_errors
  = f.inputs do
    %legend Postulación
    = f.input :name
    = f.input :bio, :label=>'Descripción', :hint=>'Una breve descripción para quienes no te conocen. ( ciudad, barrio, equipo de base al que perteneces)',:input_html=>{:class=>'span6', :rows=>6}
    = f.input :photo, :label=>'Foto'
  = f.actions do
    = f.action :submit,:label=>'Postularse',:button_html => {:class => "btn btn-primary"}
