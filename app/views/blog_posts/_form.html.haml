= semantic_form_for @blog_post, :html=>{:class=>'form-horizontal'} do |f|
  = f.semantic_errors
  = f.inputs do
    %legend Noticia
    = f.input :title, :input_html=>{:class=>'span6'}
    = f.input :embed, :input_html=>{:class=>'span6'}
    = f.input :image, :input_html=>{:class=>'span6'}
    = f.input :body, :input_html=>{:class=>'span6', :rows=>6}
  = f.actions do
    = f.action :submit,:button_html => { :class => "btn btn-primary"}
