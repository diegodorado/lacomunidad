= app_js_load :candidates=> true

%style{:type => "text/css"}
  :sass 
    .candidates.votes_result
      .votes
        vertical-align: middle
        text-align: center
        span      
          font-weight: bold
          font-size: 50px
          background: #E33326
          color: #fff
          border-radius: 90px
          width: 100px
          height: 100px
          display: inline-block
          line-height: 100px
    .ie7 .votes_results .votes span
      vertical-align: top
      zoom: 1
      *display: inline        



