  .span6
    #{link_to image_tag('logo.png'), root_path, :class=> 'logo'}
  .span10
    .row
      #user-nav
        - if user_signed_in?
          %span #{current_user.email}
          -#{link_to current_user.email, profile_path}
          #{link_to "Salir", destroy_user_session_path}
        -else
          -#{link_to "Registrarse", new_user_registration_path}
          #{link_to "Ingresar", new_user_session_path}
      %ul#main-nav
        %li.first #{link_to "Que es La Comunidad", what_path, :class=> ('active' if current_page?(what_path))}
        %li #{link_to "Muro", muro_path, :class=> ('active' if current_page?(muro_path))}
        %li #{link_to "Noticias", noticias_path, :class=> ('active' if current_page?(noticias_path))}
        %li #{link_to "Documentos", documentos_path, :class=> ('active' if current_page?(documentos_path))}
        %li.last #{link_to "Como Participar", participate_path, :class=> ('active' if current_page?(participate_path))}
