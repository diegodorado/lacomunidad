%table.table.table-striped.table-bordered.table-condensed
  %thead
    %tr
      %th(colspan=2) Candidato/a
      %th(style="text-align: center;") Votos
  %tbody
    - @candidates.each do |candidate|
      %tr
        %td(width=120)
          =image_tag candidate.photo.url(:thumb), :size=> "120x120"
        %td(style="vertical-align: middle;")
          %h4(style="margin-left:40px;font-size: 20px;letter-spacing: 1px;") #{candidate.name}
        %td(style="vertical-align: middle;text-align: center;font-weight: bold;font-size:50px")
          %span #{candidate.votes_for}
