= semantic_form_for @book, :html=>{:class=>'form-horizontal'} do |f|
  = f.semantic_errors
  = f.inputs do
    %legend Libro
    = f.input :title, :input_html=>{:class=>'span6'}
    = f.input :description, :input_html=>{:class=>'span6', :rows=>6}
    = f.input :image, :input_html=>{:class=>'span6', :rows=>6}
    = f.input :document, :input_html=>{:class=>'span6', :rows=>6}
  = f.actions do
    = f.action :submit,:button_html => { :class => "btn btn-primary"}
