= app_js_load :videos=> @videos

.tabbable.tabs-top
  %ul.nav.nav-pills
    %li.active
      %a{:href=>"#docs_videos",:data=>{:toggle=>"tab"}} Videos
    %li
      %a{:href=>"#docs_books",:data=>{:toggle=>"tab"}} Libros
    %li
      %a{:href=>"#docs_xg",:data=>{:toggle=>"tab"}} Experiencias Guiadas

  .tab-content
    #docs_videos.tab-pane.active
    #docs_books.tab-pane
      .tabbable.tabs-left
        %ul.nav.nav-tabs
          - for book in @books
            %li
              %a{:class => "#{((book.id == @books[0].id) ? 'active' : '')}",:href=>"#book_#{book.id}",:data=>{:toggle=>"tab"}} #{book.title}
        .tab-content
          - for book in @books
            .tab-pane{:class => "#{((book.id == @books[0].id) ? 'active' : '')}",:id=>"book_#{book.id}"}
              %img{:src=>"#{book.image.url(:thumb)}",:width=>100, :height=>150, :title=>"#{book.title}"}
    #docs_xg.tab-pane
      <iframe width="420" height="315" src="http://www.youtube.com/embed/EMvVPD-sJeY" frameborder="0" allowfullscreen></iframe>
      :plain
        <script type='text/javascript' src='/jwplayer/jwplayer.js'></script>


        <div style="visibility:hidden;width:1px;height:1px">
          <div id='container'>Loading the player ...</div>
        </div>
        <script type='text/javascript'>
         jwplayer('container').setup({
          flashplayer: '/jwplayer/player.swf',
          file: 'http://s3.amazonaws.com/cooph_lacomunidad/audio_mp3/1/extracto69.mp3?1330372571',
         });
         //jwplayer('container').remove();
        </script>

        <ul>
           <li onclick='jwplayer().play()'>Start the player</li>
           <li onclick='alert(jwplayer().getPosition())'>Get current position</li>
        </ul>
