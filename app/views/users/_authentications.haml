:erb
  <div style="overflow: hidden;">
    <a href="/auth/twitter" class="auth_provider">
      <%= image_tag "social/twitter_64.png", :size => "64x64", :alt => "Twitter" %>
      Twitter
    </a>
    <a href="/auth/facebook" class="auth_provider">
      <%= image_tag "social/facebook_64.png", :size => "64x64", :alt => "Facebook" %>
      Facebook
    </a>
    <a href="/auth/google?openid_url=https://www.google.com/accounts/o8/id" class="auth_provider">
      <%= image_tag "social/google_64.png", :size => "64x64", :alt => "Google" %>
      Google
    </a>
    <a href="/auth/yahoo?openid_url=https://me.yahoo.com" class="auth_provider">
      <%= image_tag "social/yahoo_64.png", :size => "64x64", :alt => "Yahoo" %>
      Yahoo
    </a>
  </div>

:css
  .auth_provider img {
    display: block;
  }

  .auth_provider {
    float: left;
    text-decoration: none;
    margin-right: 20px;
    text-align: center;
    margin-bottom: 10px;
  }
