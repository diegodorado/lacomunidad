!!! 5
%html
  %head
    %title La Comunidad para el desarrollo humano
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    = yield :javascript_includes
    = csrf_meta_tag
  %body
    %ul#logger{:style => "display:none;"}
    #ajax-indicator{:style => "display:none;"}
      =image_tag 'loading.gif'
    #inner-container
      #header
        %ul#user-nav      
          - if user_signed_in?
            %li #{current_user.email}
            %li #{link_to "Perfil", profile_path}
            %li #{link_to "Salir", destroy_user_session_path}
          -else
            %li #{link_to "Registrarse", new_user_registration_path}
            %li #{link_to "Ingresar", new_user_session_path}
        %ul#main-nav
          %li
            %a{:href => "/que-es"} Que es la comunidad
          %li
            %a{:href => "/muro"} Muro
          %li
            %a{:href => "/noticias"} Noticias
          %li
            %a{:href => "/documentos"} Documentos
          %li.last
            %a{:href => "/como-participar"} Como Participar
      #content
        #notice #{notice}
        #alert #{alert}
        = yield
      #footer
        %span La Comunidad para el desarrollo humano
