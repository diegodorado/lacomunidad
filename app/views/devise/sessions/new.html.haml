  .span6
    .well
      %h3 Entrar en La Comunidad
      %hr
      = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=>{:class =>'form-horizontal'}) do |f|
        %fieldset
          .control-group
            = f.label :email
            .controls
              = f.text_field :email
          .control-group
            = f.label :password
            .controls
              = f.password_field :password
          - if devise_mapping.rememberable?
            .control-group
              .controls
                %label
                  = f.check_box :remember_me
                  Recordarme
          .form-actions
            = f.submit "Entrar", :class => 'btn-primary btn-large'
            &nbsp; o #{link_to "Registrate", new_registration_path(resource_name)}
            %br 
