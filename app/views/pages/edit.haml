= form_for @page, :method=> 'put' do |f|
  = f.hidden_field :id
  %fieldset
    .control-group
      %label(for="title") Titulo
      .control
        = f.text_field :title, {:class=>'xlarge'}
    .control-group
      %label(for="slug") Slug
      .control
        = f.text_field :slug, {:class=>'xlarge'}
  %fieldset
    = f.text_area :content, :spellcheck=>false, :rows=>20
    .live-preview
  .form-actions
    = f.submit 'Guardar', :class=>'btn primary'


